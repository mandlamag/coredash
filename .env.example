# LedgerCore Dashboard Environment Configuration Example
# Copy this file to .env and modify as needed for your environment

# API URLs
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_GRAPHQL_API_URL=http://localhost:8080/graphql

# Neo4j Connection Defaults
REACT_APP_DEFAULT_NEO4J_URL=localhost
REACT_APP_DEFAULT_NEO4J_PORT=7687
REACT_APP_DEFAULT_NEO4J_DATABASE=neo4j

# Application Settings
REACT_APP_DEFAULT_DASHBOARD_TITLE=New dashboard
REACT_APP_ALLOW_QUERIES_WITHOUT_LOGIN=true

# Branding
REACT_APP_DASHBOARD_HEADER_COLOR=#0B297D
REACT_APP_DASHBOARD_HEADER_BUTTON_COLOR=
REACT_APP_DASHBOARD_HEADER_TITLE_COLOR=#FFFFFF
